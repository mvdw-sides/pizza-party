{
  "name": "pizza-party-api",
  "version": "1.0.0",
  "description": "The rest api for the pizza party webapp",
  "main": "lib/index.js",
  "repository": "https://github.com/mvdw-sides/pizza-party",
  "author": "Matti van de Weem <mvdweem@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "serve:watch": "yarn build; nodemon --exec babel-node src/index.js ",
    "serve": "yarn build; babel-node index.js ",
    "build": "babel src -d lib",
    "s": "node_modules/.bin/sequelize",
    "s:test": "NODE_ENV=test node_modules/.bin/sequelize",
    "db:cycle": "yarn s:test db:drop 2> /dev/null; yarn s:test db:create; yarn s:test db:migrate",
    "test": "NODE_ENV=test yarn build; yarn db:cycle 2> /dev/null ; yarn test:cucumber",
    "test:cucumber": "node_modules/.bin/cucumber-js"
  },
  "dependencies": {
    "@koa/cors": "2",
    "koa": "^2.7.0",
    "koa-router": "^7.4.0",
    "pg": "^7.10.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^5.8.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.4",
    "axios": "^0.18.0",
    "chai": "^4.2.0",
    "cucumber": "^5.1.0",
    "nodemon": "^1.18.11",
    "sequelize-cli": "^5.4.0",
    "underscore": "^1.9.1"
  }
}
